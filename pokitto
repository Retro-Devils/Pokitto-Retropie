#!/bin/bash
qjoypad "pokitto" &
cd /opt/retropie/emulators/pokitto/
xset -dpms s off s noblank
matchbox-window-manager -use_titlebar no -use_cursor no -kbdconfig $md_inst/matchbox_key_shortcuts &
/opt/retropie/emulators/pokitto/BUILD/PokittoEmu "$1" |xdotool sleep 1 keydown Shift_L+F12 sleep 0.1 keyup Shift_L+F12
